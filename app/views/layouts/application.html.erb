<!DOCTYPE html>
<html>

  <head>
    <title>Tacostagram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel=stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <ink rel="stylesheet" href="/stylesheets/application.css"> 
  </head>

  <body>
  <div class="container">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
  <ul class="navbar-nav mb-2 mb-lg-0">
      <% if @current_user %>
      Logged in as: <%= @current_user["username"] %> |
      <a href="/logout" class="btn btn-default">Logout</a>
      <% else %>
      <a href="/places" class="btn btn-default">Home</a> |
      <a href="/sessions/new" class="btn btn-default">Login</a> |
      <a href="/users/new" class="btn btn-default">Signup</a> |
      <% end %>
    </div>
  </nav>

  <div class="container mt-3">
    <div class="row">
      <div class="col text-center">
        <%= flash["notice"] %>
      </div>
    </div>

    

    <%= yield %>
    <script src=https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js></script>
  
  </body>
</html>
